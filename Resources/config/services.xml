<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="gubler_ad_search.ldap_adapter" class="%gubler_ad_search.ldap_adapter_class%">
            <argument>%gubler_ad_search.ad_username%</argument>
            <argument>%gubler_ad_search.ad_password%</argument>
            <argument>%gubler_ad_search.ad_host%</argument>
            <argument>%gubler_ad_search.ad_port%</argument>
            <argument>%gubler_ad_search.ad_base_dn%</argument>
            <argument type="service" id="logger" />
        </service>
        <service id="gubler_ad_search.ad_search" class="%gubler_ad_search.ad_search_class%">
            <argument type="service" id="gubler_ad_search.ldap_adapter"/>
        </service>
    </services>
</container>

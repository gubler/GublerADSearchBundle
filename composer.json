{
    "name": "gubler/ad-search-bundle",
    "type": "symfony-bundle",
    "description": "Active Directory search for Symfony",
    "keywords": [ "activedirectory", "active-directory", "symfony", "bundle" ],
    "homepage": "https://github.com/gubler/gubleradsearchbundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Daryl Gubler",
            "email": "daryl@dev88.co",
            "homepage": "https://dev88.co",
            "role": "Creator"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "symfony/ldap": "^3.4|^4.0",
        "illuminate/support": "^5.3",
        "ramsey/uuid": "^3.7",
        "symfony/http-kernel": "^4.0"
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.3",
        "phpunit/phpunit": "^6.2",
        "phpstan/phpstan": "^0.9",
        "behat/behat": "^3.4"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": { "Gubler\\ADSearchBundle\\": "" }
    },
    "scripts": {
        "phpcs": "phpcs -p --standard=./ruleset.xml",
        "phpunit": "./vendor/bin/phpunit -c phpunit.xml.dist --coverage-clover=coverage.xml"
    }
}
